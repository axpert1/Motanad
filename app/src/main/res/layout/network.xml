<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.motanad.motanad.fragments.NetworkFrag">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@color/white"
        android:padding="@dimen/dp_10"
        android:orientation="vertical">

        <com.motanad.motanad.custome.CircleImageView
            android:id="@+id/cImvUser"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:src="@mipmap/profile_thumb"/>
        
        <com.motanad.motanad.custome.TextViewRegular
            android:id="@+id/txtUNameNetwork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="hemant jangid"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/black"/>

        <com.motanad.motanad.custome.TextViewRegular
            android:id="@+id/txtPriceNetwork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="2562.00"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dp_10"
        android:background="@color/light_gray"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <com.motanad.motanad.custome.TextViewRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                android:text="@string/levels"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16"/>

            <com.motanad.motanad.custome.TextViewRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/networks"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/black"
                android:layout_weight=".6"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/colorPrimary"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvNetwork"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"/>

    </LinearLayout>

</LinearLayout>
